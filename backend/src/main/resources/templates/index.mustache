<!DOCTYPE HTML>
<htmls>
	<head>
		<meta charset="UTF-8" />
		<title>Spring Messenger</title>
		<script src="require.min.js"></script>
		<link rel="stylesheet" href="pure-min.css">
	</head>
	<body>
		<form id="message-form" class="pure-form">
			<fieldset>
				<legend>Message form</legend>

				<select id="user-select">
					{{#users}}
					<option value="{{login}}">{{firstname}} {{lastname}}</option>
					{{/users}}
				</select>

				<input type="text" id="message-input" required placeholder="Message" />

				<input type="button" id="submit-button" value="Send">

			</fieldset>
		</form>
	</div>
	<p>
		<ul id="messages"></ul>
	</p>
	<script >
		require(['spring-messenger-frontend']);
	</script>
	</body>
</htmls>